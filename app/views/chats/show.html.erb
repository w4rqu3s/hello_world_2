<div class="container p-3">
  <h5>Chat ##<%= @chat.id %></h5>

  <div class="messages-container border rounded p-2 mb-3 overflow-auto"
       style="height: 65vh;"
       data-controller="chat-subscription"
       data-chat-subscription-chat-id-value="<%= @chat.id %>"
       data-chat-subscription-target="messages">
    <%= render @messages %>
  </div>

  <div class="input-group">
    <div data-controller="message-form">
    <input data-message-form-target="input" type="text" placeholder="Digite sua mensagem..." />
    <button data-action="click->message-form#send">Enviar</button>
  </div>

  </div>
</div>
